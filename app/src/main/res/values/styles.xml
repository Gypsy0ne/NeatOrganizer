<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/activity_home_edit_text_cursor</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="AppBottomSheetDialogTheme.Transparent" parent="AppBottomSheetDialogTheme">
        <item name="bottomSheetStyle">@style/AppModalStyle.Transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet_dialog</item>
    </style>

    <style name="AppModalStyle.Transparent" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PersonItemTextView">
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:layout_height">@dimen/height_item_person_text_view</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--Add person dialog fragment-->
    <style name="DialogFormEditText">
        <item name="android:textCursorDrawable">@drawable/activity_home_edit_text_cursor</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textLongMessage</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/dialog_fragment_add_person_edit_text_background
        </item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/height_dialog_fragment_add_person_form_text</item>
    </style>

    <style name="DialogAddPersonFormEmailEditText" parent="DialogFormEditText">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="DialogAddPersonFormPhoneEditText" parent="DialogFormEditText">
        <item name="android:inputType">phone</item>
    </style>
    <!--End of Add person dialog fragment-->

    <style name="DialogFormButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingEnd">@dimen/padding_end_dialog_fragment_button</item>
        <item name="android:paddingStart">@dimen/padding_start_dialog_fragment_button</item>
        <item name="android:paddingTop">@dimen/padding_top_dialog_fragment_button</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_dialog_fragment_button</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">@dimen/max_text_size_dialog_add_person_confirm_text</item>
        <item name="autoSizeMinTextSize">@dimen/min_text_size_dialog_add_person_confirm_text</item>
        <item name="fontFamily">@font/roboto_black</item>
    </style>

    <style name="FragmentRecyclerView">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <!--List view items-->
    <style name="ListItemName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ListItemMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SubItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_item_grouped_task_container</item>
        <item name="android:background">@drawable/subitem_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="SubItemMenuButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">W,1:1</item>
    </style>

    <style name="HeaderItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/item_routine_header_background</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="HeaderMenuButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="layout_constraintDimensionRatio">W,3:4</item>
        <item name="android:layout_marginTop">@dimen/regular_space</item>
        <item name="android:layout_marginStart">@dimen/small_space</item>
        <item name="android:layout_marginBottom">@dimen/small_space</item>
    </style>

    <style name="HeaderMenuButton.Large" parent="HeaderMenuButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="layout_constraintDimensionRatio">W,3:4</item>
    </style>

    <style name="HeaderMenuButton.Small" parent="HeaderMenuButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="layout_constraintDimensionRatio">W,1:1</item>
    </style>

    <style name="ItemEditionSubmitButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:src">@drawable/ic_check_dark_yellow_24dp</item>
        <item name="android:background">@drawable/bg_edition_submit_button</item>
    </style>

    <style name="HeaderExpandButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HeaderRootLayout">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>
    <!--End of List view items-->

</resources>
