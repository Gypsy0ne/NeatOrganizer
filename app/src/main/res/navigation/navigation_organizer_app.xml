<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/organizer_app_navigation"
    app:startDestination="@id/tasks">

    <fragment
        android:id="@+id/tasks"
        android:name="one.gypsy.neatorganizer.presentation.tasks.view.TasksFragment"
        android:label="TasksFragment">
        <action
            android:id="@+id/action_tasks_to_addSingleTaskDialogFragment"
            app:destination="@id/addSingleTaskDialogFragment" />
        <action
            android:id="@+id/action_tasks_to_removeTaskGroupSubmitDialogFragment"
            app:destination="@id/removeTaskGroupSubmitDialogFragment" />
        <action
            android:id="@+id/action_tasks_to_routines"
            app:destination="@id/routines"
            app:launchSingleTop="true"
            app:popUpTo="@id/organizer_app_navigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/routines"
        android:name="one.gypsy.neatorganizer.presentation.routines.view.RoutinesFragment"
        android:label="RoutinesFragment">
        <action
            android:id="@+id/action_routines_to_addRoutineTaskDialogFragment"
            app:destination="@id/addRoutineTaskDialogFragment" />
        <action
            android:id="@+id/action_routines_to_removeRoutineSubmitDialogFragment"
            app:destination="@id/removeRoutineSubmitDialogFragment" />
    </fragment>

    <dialog
        android:id="@+id/task_group_add"
        android:name="one.gypsy.neatorganizer.presentation.tasks.view.AddSingleTaskGroupDialogFragment"
        android:label="AddTaskGroupDialogFragment" />

    <dialog
        android:id="@+id/addSingleTaskDialogFragment"
        android:name="one.gypsy.neatorganizer.presentation.tasks.view.AddSingleTaskDialogFragment"
        android:label="AddSingleTaskDialogFragment">
        <argument
            android:name="groupId"
            app:argType="long" />
    </dialog>

    <dialog
        android:id="@+id/addRoutineTaskDialogFragment"
        android:name="one.gypsy.neatorganizer.presentation.routines.view.AddRoutineTaskDialogFragment"
        android:label="AddRoutineTaskDialogFragment">
        <argument
            android:name="routineId"
            app:argType="long" />
    </dialog>

    <dialog
        android:id="@+id/removeRoutineSubmitDialogFragment"
        android:name="one.gypsy.neatorganizer.presentation.routines.view.RemoveRoutineSubmitDialogFragment"
        android:label="RemoveRoutineSubmitDialogFragment">
        <argument
            android:name="itemId"
            app:argType="long" />
        <argument
            android:name="subItemsCount"
            app:argType="integer" />
    </dialog>

    <dialog
        android:id="@+id/removeTaskGroupSubmitDialogFragment"
        android:name="one.gypsy.neatorganizer.presentation.tasks.view.RemoveTaskGroupSubmitDialogFragment"
        android:label="RemoveTaskGroupSubmitDialogFragment">
        <argument
            android:name="itemId"
            app:argType="long" />
        <argument
            android:name="subItemsCount"
            app:argType="integer" />
    </dialog>

    <dialog
        android:id="@+id/routine_add"
        android:name="one.gypsy.neatorganizer.presentation.routines.view.AddRoutineDialogFragment"
        android:label="AddRoutineDialogFragment" />

</navigation>