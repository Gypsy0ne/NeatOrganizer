<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/organizer_app_navigation"
    app:startDestination="@id/tasks">

    <fragment
        android:id="@+id/tasks"
        android:name="one.gypsy.neatorganizer.presentation.tasks.view.TasksFragment"
        android:label="TasksFragment" >
        <action
            android:id="@+id/action_tasks_to_addSingleTaskDialogFragment"
            app:destination="@id/addSingleTaskDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/people"
        android:name="one.gypsy.neatorganizer.presentation.people.view.PeopleFragment"
        android:label="PeopleFragment" >
        <action
            android:id="@+id/action_people_to_personProfileFragment"
            app:destination="@id/person_profile_fragment">
        </action>
        <action
            android:id="@+id/action_people_to_rateInteractionDialogFragment"
            app:destination="@id/rateInteractionDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/routines"
        android:name="one.gypsy.neatorganizer.presentation.routines.view.RoutinesFragment"
        android:label="RoutinesFragment" />
    <dialog
        android:id="@+id/person_add"
        android:name="one.gypsy.neatorganizer.presentation.people.view.AddPersonDialogFragment"
        android:label="AddPersonDialogFragment" />


    <dialog
        android:id="@+id/task_group_add"
        android:name="one.gypsy.neatorganizer.presentation.tasks.view.AddSingleTaskGroupDialogFragment"
        android:label="AddTaskGroupDialogFragment" />

    <fragment
        android:id="@+id/person_profile_fragment"
        android:name="one.gypsy.neatorganizer.presentation.profile.PersonProfileFragment"
        android:label="PersonHistoryFragment">
        <argument
            android:name="personId"
            app:argType="long" />
    </fragment>
    <dialog
        android:id="@+id/rateInteractionDialogFragment"
        android:name="one.gypsy.neatorganizer.presentation.people.view.RateInteractionDialogFragment"
        android:label="RateInteractionDialogFragment">
        <argument
            android:name="personId"
            app:argType="long" />
    </dialog>

    <dialog
        android:id="@+id/addSingleTaskDialogFragment"
        android:name="one.gypsy.neatorganizer.presentation.tasks.view.AddSingleTaskDialogFragment"
        android:label="AddSingleTaskDialogFragment">
        <argument
            android:name="groupId"
            app:argType="long" />
    </dialog>
</navigation>