<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="one.gypsy.neatorganizer.presentation.tasks.vm.AddTaskGroupViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            style="@style/DialogFormEditText"
            android:id="@+id/edit_text_dialog_fragment_add_task_group_title"
            android:layout_marginStart="@dimen/double_space"
            android:layout_marginTop="@dimen/double_space"
            android:layout_marginEnd="@dimen/double_space"
            android:drawableStart="@drawable/ic_group_add_white_24dp"
            android:hint="@string/add_task_group_dialog_fragment_content_hint"
            android:maxLength="@integer/regular_text_length"
            android:text="@={viewModel.taskGroupTitle}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_dialog_fragment_add_task_group_confirmation"
            style="@style/DialogFormButton.Submit"
            android:onClick="@{() -> viewModel.addTaskGroup()}"
            android:layout_marginTop="@dimen/triple_space"
            android:layout_marginBottom="@dimen/triple_space"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_dialog_fragment_add_task_group_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>