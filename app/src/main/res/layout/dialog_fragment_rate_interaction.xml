<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="one.gypsy.neatorganizer.presentation.people.vm.RateInteractionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_dialog_fragment_rate_header"
            android:layout_width="@dimen/normal_0"
            android:layout_height="@dimen/normal_600"
            android:text="How was the meeting?"
            android:layout_marginTop="@dimen/normal_200"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            app:autoSizeMaxTextSize="@dimen/text_normal_125"
            app:autoSizeMinTextSize="@dimen/text_normal_100"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hsalf.smilerating.SmileRating
            android:id="@+id/rating_dialog_fragment_rate_interaction"
            ratingChangeListener="@{(level, reselected) -> viewModel.onRatingChanged(level, reselected)}"
            android:layout_width="@dimen/normal_0"
            android:layout_height="104dp"
            android:layout_marginHorizontal="@dimen/normal_100"
            android:layout_marginTop="@dimen/normal_200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_dialog_fragment_rate_header" />

        <Button
            android:id="@+id/button_dialog_fragment_rate_interaction_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DialogFormButton.Submit"
            android:onClick="@{() -> viewModel.submitInteractionEntry()}"
            android:layout_marginTop="@dimen/normal_400"
            android:layout_marginBottom="@dimen/normal_300"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_dialog_fragment_rate_interaction" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>