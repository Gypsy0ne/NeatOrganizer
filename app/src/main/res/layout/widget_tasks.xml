<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tasksWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/normal_25"
    android:background="@drawable/task_widget_background"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_400"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/taskGroupTitle"
            android:layout_width="@dimen/normal_0"
            android:layout_height="@dimen/normal_400"
            android:layout_marginHorizontal="@dimen/normal_50"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="@dimen/text_normal_100"
            android:autoSizeMinTextSize="@dimen/text_normal_25"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:textColor="@color/gray" />

        <ImageView
            android:id="@+id/expandWindow"
            android:layout_width="@dimen/normal_300"
            android:layout_height="@dimen/normal_300"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/normal_100"
            android:padding="@dimen/normal_25"
            android:layout_weight="0"
            android:src="@drawable/ic_launch_grey_24"
            app:tint="@color/gray" />
    </LinearLayout>

    <ImageView
        android:id="@+id/titleListSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/helper_200"
        android:layout_marginHorizontal="@dimen/normal_25"
        android:layout_marginTop="@dimen/normal_400"
        android:background="@color/light_gray" />

    <ListView
        android:id="@+id/tasksList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/helper_100"
        android:layout_marginTop="@dimen/normal_400"
        android:layout_marginBottom="@dimen/helper_100"
        android:listSelector="@android:color/transparent"
        android:paddingHorizontal="@dimen/normal_50" />

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/normal_400"
        android:gravity="center"
        android:text="@string/widget_tasks_empty_view_message" />

</FrameLayout>