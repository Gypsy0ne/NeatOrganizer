<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tasksWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/small_space"
    android:background="@drawable/task_widget_background"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/taskGroupTitle"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="@dimen/medium_space"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="@dimen/large_text_size"
            android:autoSizeMinTextSize="6dp"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:textColor="@color/gray" />

        <ImageView
            android:id="@+id/expandWindow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/regular_space"
            android:layout_weight="0"
            android:src="@drawable/ic_launch_grey_24"
            android:tint="@color/gray" />
    </LinearLayout>

    <ImageView
        android:id="@+id/titleListSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/small_space"
        android:layout_marginTop="32dp"
        android:background="@color/light_gray" />

    <ListView
        android:id="@+id/tasksList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="0.5dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="0.5dp"
        android:listSelector="@android:color/transparent"
        android:paddingHorizontal="@dimen/medium_space" />

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/widget_tasks_empty_view_message" />

</FrameLayout>