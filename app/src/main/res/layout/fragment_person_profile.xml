<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="one.gypsy.neatorganizer.domain.dto.Person.Sex" />
        <variable
            name="interactionEntriesAdapter"
            type="one.gypsy.neatorganizer.presentation.profile.InteractionEntriesAdapter" />

        <variable
            name="layoutManager"
            type="androidx.recyclerview.widget.GridLayoutManager" />

        <variable
            name="viewModel"
            type="one.gypsy.neatorganizer.presentation.profile.vm.PersonProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_fragment_person_profile_info_background"
            lastInteractionBackground="@{viewModel.profile.lastInteraction}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:elevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_fragment_person_profile_info_separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:autoSizeMaxTextSize="48sp"
            app:autoSizeMinTextSize="24sp"
            app:autoSizeTextType="uniform"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="2"
            android:elevation="8dp"
            android:outlineProvider="none"
            tools:text="Sample Name"
            android:id="@+id/text_view_person_profile_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/white"
            android:text="@{viewModel.profile.name}"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_person_profile_avatar"
            app:layout_constraintEnd_toEndOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintStart_toEndOf="@+id/image_view_person_profile_avatar"
            app:layout_constraintTop_toTopOf="@+id/image_view_person_profile_avatar" />

        <ImageView
            android:id="@+id/image_view_person_profile_avatar"
            imageBitmap="@{viewModel.profile.photoThumbnail}"
            placeholder="@{viewModel.profile.sex == Sex.MALE ? @drawable/ic_user_male_gray_24dp : @drawable/ic_user_female_gray_24dp}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:elevation="5dp"
            android:padding="6dp"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
            app:layout_constraintDimensionRatio="H, 4:3"
            app:layout_constraintStart_toStartOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintTop_toTopOf="@+id/view_fragment_person_profile_info_background" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_fragment_person_profile_info_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_white_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintEnd_toEndOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintTop_toBottomOf="@+id/view_fragment_person_profile_info_background" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_fragment_person_profile_interaction_history"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            layoutManager="@{layoutManager}"
            adapter="@{interactionEntriesAdapter}"
            adapterData="@{viewModel.profile.interactionHistory}"
            android:background="@drawable/person_profile_data_background"
            android:elevation="4dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_fragment_person_profile_chart_separator"
            app:layout_constraintEnd_toEndOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintTop_toBottomOf="@+id/floatingActionButton"
            app:layout_constraintVertical_bias="0.0" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_fragment_person_profile_chart_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart_fragment_person_profile_interaction_chart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/person_profile_data_background"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/recycler_view_fragment_person_profile_interaction_history"
            app:layout_constraintStart_toStartOf="@+id/recycler_view_fragment_person_profile_interaction_history"
            app:layout_constraintTop_toTopOf="@+id/guideline_fragment_person_profile_chart_separator" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>