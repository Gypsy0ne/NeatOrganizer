<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="one.gypsy.neatorganizer.domain.dto.people.Person.Sex" />

        <variable
            name="interactionEntriesAdapter"
            type="one.gypsy.neatorganizer.presentation.profile.InteractionEntriesAdapter" />

        <variable
            name="layoutManager"
            type="androidx.recyclerview.widget.GridLayoutManager" />


        <variable
            name="viewModel"
            type="one.gypsy.neatorganizer.presentation.profile.vm.PersonProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_fragment_person_profile_info_background"
            lastInteractionBackground="@{viewModel.profile.lastInteraction}"
            android:layout_width="@dimen/normal_0"
            android:layout_height="@dimen/normal_0"
            android:layout_margin="@dimen/normal_200"
            android:elevation="@dimen/normal_50"
            app:layout_constraintBottom_toTopOf="@+id/guideline_fragment_person_profile_info_separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_person_profile_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/normal_100"
            android:elevation="@dimen/normal_100"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="2"
            android:outlineProvider="none"
            android:text="@{viewModel.profile.name}"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="@dimen/text_normal_200"
            app:autoSizeMinTextSize="@dimen/text_normal_100"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_person_profile_avatar"
            app:layout_constraintEnd_toEndOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintStart_toEndOf="@+id/image_view_person_profile_avatar"
            app:layout_constraintTop_toTopOf="@+id/image_view_person_profile_avatar"
            tools:text="Sample Name" />

        <ImageView
            android:id="@+id/image_view_person_profile_avatar"
            imageBitmap="@{viewModel.profile.photoThumbnail}"
            placeholder="@{viewModel.profile.sex == Sex.MALE ? @drawable/ic_user_male_gray_24dp : @drawable/ic_user_female_gray_24dp}"
            android:layout_width="@dimen/normal_0"
            android:layout_height="@dimen/normal_0"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/normal_100"
            android:layout_marginTop="@dimen/normal_100"
            android:layout_marginBottom="@dimen/normal_400"
            android:elevation="@dimen/normal_75"
            android:padding="@dimen/normal_75"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
            app:layout_constraintDimensionRatio="H, 4:3"
            app:layout_constraintStart_toStartOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintTop_toTopOf="@+id/view_fragment_person_profile_info_background" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_fragment_person_profile_info_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_white_24"
            app:layout_constraintBottom_toBottomOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintEnd_toEndOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintTop_toBottomOf="@+id/view_fragment_person_profile_info_background" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_fragment_person_profile_interaction_history"
            adapter="@{interactionEntriesAdapter}"
            adapterData="@{viewModel.profile.interactionHistory}"
            layoutManager="@{layoutManager}"
            android:layout_width="@dimen/normal_0"
            android:layout_height="@dimen/normal_0"
            android:layout_marginVertical="@dimen/normal_100"
            android:background="@drawable/person_profile_data_background"
            android:elevation="@dimen/normal_50"
            android:padding="@dimen/normal_50"
            app:layout_constraintBottom_toTopOf="@+id/guideline_fragment_person_profile_chart_separator"
            app:layout_constraintEnd_toEndOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/view_fragment_person_profile_info_background"
            app:layout_constraintTop_toBottomOf="@+id/floatingActionButton"
            app:layout_constraintVertical_bias="0.0" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_fragment_person_profile_chart_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart_fragment_person_profile_interaction_chart"
            interactionChartData="@{viewModel.profile.interactionHistory}"
            android:layout_width="@dimen/normal_0"
            android:layout_height="@dimen/normal_0"
            android:layout_marginTop="@dimen/normal_100"
            android:layout_marginBottom="@dimen/normal_300"
            android:background="@drawable/person_profile_data_background"
            android:elevation="@dimen/normal_50"
            android:padding="@dimen/normal_300"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/recycler_view_fragment_person_profile_interaction_history"
            app:layout_constraintStart_toStartOf="@+id/recycler_view_fragment_person_profile_interaction_history"
            app:layout_constraintTop_toTopOf="@+id/guideline_fragment_person_profile_chart_separator" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>