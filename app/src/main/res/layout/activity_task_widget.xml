<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="one.gypsy.neatorganizer.presentation.tasks.vm.TasksWidgetViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.tasks.view.widget.TaskWidgetActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/manageToolbar"
            android:layout_width="@dimen/normal_0"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/activity_action_bar_background"
            android:elevation="@dimen/normal_25"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:menu="@menu/widget_list_manage_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.autofit.et.lib.AutoFitEditText
                android:id="@+id/groupTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusedByDefault="true"
                editionEnabled="@{viewModel.titleEdited}"
                android:gravity="center_vertical"
                android:text="@{viewModel.taskGroup.name}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal_100"
                tools:text="Sample title" />
        </androidx.appcompat.widget.Toolbar>

        <fragment
            android:id="@+id/navigationFragmentsContainer"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="@dimen/normal_0"
            android:layout_height="@dimen/normal_0"
            app:defaultNavHost="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manageToolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>