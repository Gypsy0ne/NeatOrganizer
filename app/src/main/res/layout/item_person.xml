<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <import type="one.gypsy.neatorganizer.domain.dto.Person.Sex" />

        <variable
            name="viewModel"
            type="one.gypsy.neatorganizer.presentation.people.vm.PersonViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/item_person_white_background"
        android:elevation="4dp"
        android:onClick="@{clickListener}">

        <ImageView
            android:id="@+id/image_view_item_person_avatar"
            imageBitmap="@{viewModel.personEntry.photoThumbnail}"
            lastInteractionBackground="@{viewModel.personEntry.lastInteraction}"
            placeholder="@{viewModel.personEntry.sex == Sex.MALE ? @drawable/ic_user_male_gray_24dp : @drawable/ic_user_female_gray_24dp}"
            android:layout_width="@dimen/width_item_person_avatar_image"
            android:layout_height="@dimen/height_item_person_avatar_image"
            android:padding="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_item_person_date_of_birth"
            style="@style/PersonItemTextView"
            dateText="@{viewModel.personEntry.dateOfBirth}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/gray"
            app:autoSizeMaxTextSize="@dimen/max_text_size_item_person_date_of_birth_text"
            app:autoSizeMinTextSize="@dimen/min_text_size_item_person_date_of_birth_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_item_person_name"
            style="@style/PersonItemTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@{viewModel.personEntry.name}"
            android:textColor="@color/gray"
            app:autoSizeMaxTextSize="@dimen/max_text_size_item_person_name_text"
            app:autoSizeMinTextSize="@dimen/min_text_size_item_person_name_text"
            app:layout_constraintBottom_toTopOf="@+id/text_view_item_person_description"
            app:layout_constraintEnd_toStartOf="@+id/text_view_item_person_date_of_birth"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_view_item_person_avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Username" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_item_person_description"
            style="@style/PersonItemTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"

            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto"
            android:text="Sample description goes in here"
            android:textColor="@color/gray"
            app:autoSizeMaxTextSize="@dimen/max_text_size_item_person_name_text"
            app:autoSizeMinTextSize="@dimen/min_text_size_item_person_name_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_item_person_date_of_birth"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_view_item_person_avatar"
            app:layout_constraintTop_toBottomOf="@+id/text_view_item_person_name"
            tools:text="Username" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
