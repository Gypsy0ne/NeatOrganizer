<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="profileRedirectClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="interactionUpdateClickListener"
            type="android.view.View.OnClickListener" />

        <import type="one.gypsy.neatorganizer.domain.dto.Person.Sex" />

        <variable
            name="viewModel"
            type="one.gypsy.neatorganizer.presentation.people.vm.PersonEntryViewModel" />
    </data>
    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:id="@+id/swipe_layout_item_person_root"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:contentView="@+id/relative_layout_item_person_content"
        app:leftMenuView="@+id/button_item_person_update_interaction">

    <RelativeLayout
        android:id="@+id/relative_layout_item_person_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/item_person_white_background"
        android:elevation="4dp"
        android:onClick="@{profileRedirectClickListener}">

        <ImageView
            android:id="@+id/image_view_item_person_avatar"
            imageBitmap="@{viewModel.person.photoThumbnail}"
            lastInteractionBackground="@{viewModel.person.lastInteraction}"
            placeholder="@{viewModel.person.sex == Sex.MALE ? @drawable/ic_user_male_gray_24dp : @drawable/ic_user_female_gray_24dp}"
            android:layout_width="@dimen/width_item_person_avatar_image"
            android:layout_height="@dimen/height_item_person_avatar_image"
            android:padding="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_item_person_date_of_birth"
            style="@style/PersonItemTextView"
            dateText="@{viewModel.person.dateOfBirth}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/gray"
            app:autoSizeMaxTextSize="@dimen/max_text_size_item_person_date_of_birth_text"
            app:autoSizeMinTextSize="@dimen/min_text_size_item_person_date_of_birth_text"
            android:layout_alignParentEnd="true"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_item_person_name"
            style="@style/PersonItemTextView"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@{viewModel.person.name}"
            android:textColor="@color/gray"
            app:autoSizeMaxTextSize="@dimen/max_text_size_item_person_name"
            app:autoSizeMinTextSize="@dimen/min_text_size_item_person_name"
            android:layout_toEndOf="@id/image_view_item_person_avatar"
            android:layout_toStartOf="@id/text_view_item_person_date_of_birth"

            tools:text="Username" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_item_person_description"
            style="@style/PersonItemTextView"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/image_view_item_person_avatar"
android:layout_below="@id/text_view_item_person_name"
            android:layout_toStartOf="@id/text_view_item_person_date_of_birth"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto"
            android:text="Sample description goes in here"
            android:textColor="@color/gray"
            app:autoSizeMaxTextSize="@dimen/max_text_size_item_person_description"
            app:autoSizeMinTextSize="@dimen/min_text_size_item_person_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_item_person_date_of_birth"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_view_item_person_avatar"
            app:layout_constraintTop_toBottomOf="@+id/text_view_item_person_name"
            tools:text="Username" />


    </RelativeLayout>
    <Button
        android:id="@+id/button_item_person_update_interaction"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/item_person_interaction_update"
        android:textColor="@color/white"
        android:drawableTop="@drawable/ic_update_white_24dp"
        android:paddingTop="10dp"
        android:paddingBottom="4dp"
        android:drawablePadding="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:onClick="@{interactionUpdateClickListener}"
        android:background="@drawable/item_person_swipe_update_background"
        />

    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>
</layout>
