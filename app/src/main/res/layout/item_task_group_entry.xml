<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="name"
            type="String" />

        <variable
            name="tasksCount"
            type="int" />

        <variable
            name="tasksDone"
            type="int" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/HeaderItemContainer"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <TextView
            android:id="@+id/itemName"
            style="@style/ListItemName.Header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/regular_space"
            android:autoSizeMaxTextSize="@dimen/large_text_size"
            android:autoSizeMinTextSize="@dimen/regular_text_size"
            android:autoSizeTextType="uniform"
            android:text="@{name}"
            app:layout_constraintBottom_toTopOf="@+id/itemsCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/regular_space"
            android:text="@{@string/item_task_group_entry_tasks_ratio(tasksDone, tasksCount)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>