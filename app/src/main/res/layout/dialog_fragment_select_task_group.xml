<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="one.gypsy.neatorganizer.presentation.tasks.vm.TaskWidgetSelectionViewModel" />

        <variable
            name="layoutManager"
            type="androidx.recyclerview.widget.LinearLayoutManager" />

        <variable
            name="tasksAdapter"
            type="one.gypsy.neatorganizer.presentation.tasks.view.widget.configuration.TaskGroupEntriesAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogContainer"
        style="@style/DialogContentWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:autoSizeMaxTextSize="@dimen/large_text_size"
            android:autoSizeMinTextSize="@dimen/medium_text_size"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:padding="@dimen/medium_space"
            android:text="Select new task group"
            android:textSize="@dimen/large_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/taskGroups"
            hasFixedSize="@{true}"
            adapter="@{tasksAdapter}"
            adapterData="@{viewModel.listedTaskGroups}"
            android:layout_marginVertical="@dimen/medium_space"
            layoutManager="@{layoutManager}"
            android:layout_width="0dp"
            android:layout_height="320dp"
            android:background="@color/blue"
            android:elevation="@dimen/small_space"
            android:paddingHorizontal="@dimen/small_space"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@+id/selectionCancelation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <Button
            android:id="@+id/selectionCancelation"
            style="@style/DialogFormButton.Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/triple_space"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/selectionConfirmation"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/selectionConfirmation"
            style="@style/DialogFormButton.Submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/triple_space"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/selectionCancelation" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>