<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <data>
        <variable
            name="viewModel"
            type="one.gypsy.neatorganizer.presentation.profile.vm.InteractionEntryViewModel" />
    </data>
    <RelativeLayout
        android:id="@+id/relative_layout_item_person_content"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_margin="4dp"
   android:padding="8dp"
        android:background="@drawable/item_person_white_background"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/image_view_item_interaction_rating"
            android:layout_width="@dimen/width_item_person_avatar_image"
            android:layout_height="@dimen/height_item_person_avatar_image"
            android:padding="6dp"
            android:src="@drawable/ic_cake_gray_24dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_item_interaction_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="@color/gray"
            app:autoSizeMaxTextSize="@dimen/max_text_size_item_person_date_of_birth_text"

            dateText="@{viewModel.interactionEntry.interactionDate}"
            android:layout_alignParentBottom="true"
            app:autoSizeMinTextSize="@dimen/min_text_size_item_person_date_of_birth_text"
            android:layout_below="@id/image_view_item_interaction_rating"
            android:layout_alignEnd="@id/image_view_item_interaction_rating"
            android:layout_alignStart="@id/image_view_item_interaction_rating"/>



    </RelativeLayout>
</layout>
