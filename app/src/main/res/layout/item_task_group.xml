<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="one.gypsy.neatorganizer.presentation.tasks.vm.SingleTaskGroupViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_layout_item_task_group_header"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:onClick="@{() -> viewModel.onExpandTrigger()}">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_edit_white_24dp" />
        </RelativeLayout>

        <LinearLayout
            expanded="@{viewModel.expanded}"
            android:id="@+id/linear_layout_item_task_group_tasks"
            linearGroupedTasksData="@{viewModel.tasks}"
            android:padding="4dp"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</layout>
