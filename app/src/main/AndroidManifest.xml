<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="one.gypsy.neatorganizer">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".presentation.OrganizerApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".presentation.notes.view.widget.remote.NotesAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/note_widget_info" />
        </receiver>

        <activity
            android:name=".presentation.notes.view.widget.management.NoteWidgetActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask" />

        <activity android:name=".presentation.notes.view.widget.configuration.NoteWidgetConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.tasks.view.widget.TaskWidgetActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask" />

        <receiver android:name=".presentation.tasks.view.widget.TasksAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/tasks_widget_info" />
        </receiver>

        <activity android:name=".presentation.tasks.view.widget.configuration.TasksAppWidgetConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.LaunchActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.HomeActivity"
            android:windowSoftInputMode="adjustPan" />

        <service
            android:name=".presentation.tasks.view.widget.TaskWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <service android:name=".presentation.tasks.view.widget.TaskWidgetSynchronizationService" />

        <service android:name=".presentation.notes.view.widget.management.NoteWidgetSynchronizationService" />
    </application>

</manifest>